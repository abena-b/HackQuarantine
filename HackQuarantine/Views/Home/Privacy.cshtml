@model IEnumerable<HackQuarantine.Models.Store>
@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stores</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    @foreach (Store store in Model)
    {
        <p>@store.Name</p>
        <p>@store.Address</p>
        <p>@store.Phone</p>
        @foreach (var item in store.Items)
        {
            <p style="margin-left: 20px;">@item.Name</p>
            <p style="margin-left: 20px;">@(item.InStock == true ? "In stock!" : "Out of stock :(")</p>
            <p style="margin-left: 20px;">$@item.Price</p>
            @if (item.SaleStatus == SaleStatus.MediumQuantity)
            {
                <p style="margin-left: 20px;">Medium Quantity</p>
            }
            <p><a>Add a comment</a></p>
        }
    }
</body>
</html>