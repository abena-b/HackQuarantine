@model IEnumerable<Store>
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stores</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    @foreach (Store store in Model)
    {
        <h4>@store.Name</h4>
        @foreach (Item item in store.Items)
        {
            <p><span style="font-weight: bold">Item Name: </span>@item.Name</p>
            <!--We will have to figure out a way for these values to be calculated-->
            <p><span style="font-weight: bold">Stock: </span>@(item.InStock == true ? "In stock!" : "Out of stock :(")</p>
            <p><span style="font-weight: bold">Price: </span>$@item.Price</p>
            @if (item.SaleStatus == SaleStatus.LowQuantity)
            {
                <p><span style="font-weight: bold">Price: </span>Low Quantity</p>
            }
            else if (item.SaleStatus == SaleStatus.MediumQuantity)
            {
                <p><span style="font-weight: bold">Price: </span>Medium Quantity</p>
            }
            else if (item.SaleStatus == SaleStatus.HighQuantity)
            {
                <p><span style="font-weight: bold">Price: </span>High Quantity</p>
            }
            @foreach (var comment in item.Comments)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Comment</h3>
                    </div>
                    <div class="panel-body">
                        <p><span style="font-weight: bold">Date Reported: </span>@comment.Date</p>
                        <p><span style="font-weight: bold">Stock: </span>@(item.InStock == true ? "In stock!" : "Out of stock :(")</p>
                        <p><span style="font-weight: bold">Quantity: </span>$@item.Price</p>
                        @if (item.SaleStatus == SaleStatus.LowQuantity)
                        {
                            <p><span style="font-weight: bold">Price: </span>Low Quantity</p>
                        }
                        else if (item.SaleStatus == SaleStatus.MediumQuantity)
                        {
                            <p><span style="font-weight: bold">Price: </span>Medium Quantity</p>
                        }
                        else if (item.SaleStatus == SaleStatus.HighQuantity)
                        {
                            <p><span style="font-weight: bold">Price: </span>High Quantity</p>
                        }
                    </div>
                    <p><span style="font-weight: bold">Notes: </span>@comment.Notes</p>
                </div>
            }
            <form asp-action="Privacy" method="post">
                <input style="display: none;" type="text" value="@store.Id" name="storeId" />
                <input style="display: none;" type="text" value="@item.Id" name="itemId" />
                <button type="submit" class="btn btn-primary">Add a comment</button>
            </form>
        }
    }
</body>
</html>