@model Store
@{
    ViewData["Title"] = "Store";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stores</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div id="card" class="card">
        <div class="card-header">
            <h4><big>@Model.Name</big> <small class="text-black-50">@Model.StoreType</small><span class="float-right"><i class="far fa-bookmark"></i></span></h4>
        </div>
        <div style="margin-bottom: 10px" class="container borderline">
            <div class="list-group list-group-flush">
                <div class="list-group-item">
                    <p>
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i == Math.Floor(Model.Rating) && Model.Rating % 1 != 0)
                            {
                                <i class="fas fa-star-half"></i>
                            }
                            else if (Model.Rating > i)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </p>
                    <p>Store status - Operation Hours</p>
                    <br />
                    <address>@Model.Address</address>
                    <p>@Model.Phone</p>
                    <a href="https://@Model.Website" target="_blank">@Model.Website</a>
                </div>
                <div class="list-group-item" type="button" data-toggle="collapse" data-target="#itemListCollapse" aria-expanded="false" aria-controls="itemListCollapse">
                    <h5>Item Status <span class="float-right"><i class="fas fa-angle-right"></i></span></h5>
                    <div class="collapse" id="itemListCollapse">
                        @if (Model.Items.Count != 0)
                        {
                            <ul class="list-group">
                                @foreach (var item in Model.Items)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @item.Name
                                        @if (item.SaleStatus == SaleStatus.LowQuantity)
                                        {
                                            <span class="badge badge-warning badge-pill">Low Quantity</span>
                                        }
                                        else if (item.InStock == true)
                                        {
                                            <span class="badge badge-success badge-pill">In Stock</span>
                                        }
                                        else if (item.InStock == false)
                                        {
                                            <span class="badge badge-danger badge-pill">No Stock</span>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Toilet Paper
                                    <span class="badge badge-danger badge-pill">No Stock</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Bottle Water
                                    <span class="badge badge-success badge-pill">In Stock</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Sanitizer
                                    <span class="badge badge-warning badge-pill">Low Quantity</span>
                                </li>
                            </ul>
                        }
                    </div>
                </div>

                <div class="list-group-item">
                    <div class="row no-gutters">
                        <div class="col text-center">
                            <i class="far fa-comment"></i>
                            <p><small>Comment</small></p>
                        </div>
                        <div class="col text-center">
                            <i class="far fa-star"></i>
                            <p><small>Review</small></p>
                        </div>
                        <div class="col text-center">
                            <i class="fas fa-external-link-alt"></i>
                            <p><small>Website</small></p>
                        </div>
                        <div class="col text-center">
                            <i class="fas fa-mobile-alt"></i>
                            <p><small>Call</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-header">
            <h4>All Comment</h4>
        </div>
        <div class="row d-flex justify-content-center mt-100">
            <div class="col-lg-12">
                <div class="card">
                    <div class="comment-widgets">
                        @if (Model.Items.Count != 0 && Model.Items != null)
                        {
                            @foreach (var item in Model.Items)
                            {
                                if (item.Comments.Count !=0 && item.Comments != null)
                                {
                                    foreach (var comment in item.Comments)
                                    {

                                        <div class="d-flex flex-row comment-row">
                                            <div class="p-2">
                                                <span style="font-size: 48px;">
                                                    <i class="far fa-user-circle"></i>
                                                </span>
                                            </div>
                                            <div class="comment-text w-100">
                                                <h6 class="font-medium">
                                                    Johnathan Doeting <span style="font-size:5px; vertical-align: middle;"><i class="fas fa-circle"></i></span>
                                                    @{
                                                        TimeSpan span = DateTime.Now.Subtract(comment.Date);
                                                        if (span.TotalDays >= 1)
                                                        {
                                                            <span class="text-black-50">
                                                                @Math.Floor(span.TotalDays) days ago
                                                            </span>
                                                        }
                                                        else if (span.TotalHours >= 1)
                                                        {
                                                            <span class="text-black-50">
                                                                @Math.Floor(span.TotalHours) hours ago
                                                            </span>
                                                        }
                                                        else if (span.TotalMinutes >= 60)
                                                        {
                                                            <span class="text-black-50">
                                                                @Math.Floor(span.TotalMinutes) minutes ago
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-black-50">
                                                                @Math.Floor(span.TotalSeconds) seconds ago
                                                            </span>
                                                        }
                                                    }
                                                </h6>
                                                <p>@comment.Notes</p>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <h5>No comments added.</h5>
                                }
                            }
                        }
                        else
                        {
                            <!-- Comment Row -->
                            <div class="d-flex flex-row comment-row m-t-0">
                                <div class="p-2">
                                    <span style="font-size: 48px;">
                                        <i class="far fa-user-circle"></i>
                                    </span>
                                </div>
                                <div class="comment-text w-100">
                                    <h6 class="font-medium">James Thomas <span style="font-size:5px; vertical-align: middle;"><i class="fas fa-circle"></i></span> <span class="text-black-50">## time ago</span></h6>
                                    <p>Be sure to stock up on toilet paper. People are swarming to buy them! </p>
                                </div>
                            </div>
                            <!-- Comment Row -->
                            <div class="d-flex flex-row comment-row">
                                <div class="p-2">
                                    <span style="font-size: 48px;">
                                        <i class="far fa-user-circle"></i>
                                    </span>
                                </div>
                                <div class="comment-text active w-100">
                                    <h6 class="font-medium">Michael Hussey <span style="font-size:5px; vertical-align: middle;"><i class="fas fa-circle"></i></span> <span class="text-black-50">## time ago</span></h6>
                                    <p>Super long lines today. I recommend going right when the store opens.</p>
                                </div>
                            </div>
                            <!-- Comment Row -->
                            <div class="d-flex flex-row comment-row">
                                <div class="p-2">
                                    <span style="font-size: 48px;">
                                        <i class="far fa-user-circle"></i>
                                    </span>
                                </div>
                                <div class="comment-text w-100">
                                    <h6 class="font-medium">Johnathan Doeting <span style="font-size:5px; vertical-align: middle;"><i class="fas fa-circle"></i></span> <span class="text-black-50">## time ago</span></h6>
                                    <p>Just bought the last bottle of hand sanitizer, but they’ll restock on Wednesday. </p>
                                </div>
                            </div>
                        }
                    </div> <!-- Card -->
                </div>
            </div>
        </div>
    </div>
</body>


</html>